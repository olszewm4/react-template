{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug DEV (Chrome)",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:3000",
            "preLaunchTask": "npm-run-start-dev",
            "webRoot": "${workspaceRoot}",
            "sourceMaps": true
        },
        {
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "name": "Debug DEV (Firefox)",
            "url": "http://localhost:3000",
            "preLaunchTask": "npm-run-start-dev",
            "webRoot": "${workspaceFolder}"
        },
        {
            "type": "edge",
            "request": "launch",
            "name": "Debug DEV (Edge)",
            "url": "http://localhost:3000",
            "preLaunchTask": "npm-run-start-dev",
            "webRoot": "${workspaceFolder}"
        },
        {
            "name": "Debug INT.TEST (Chrome)",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:3000",
            "preLaunchTask": "npm-run-start-internal.test",
            "webRoot": "${workspaceRoot}",
            "sourceMaps": true
        },
        {
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "name": "Debug INT.TEST (Firefox)",
            "url": "http://localhost:3000",
            "preLaunchTask": "npm-run-start-internal.test",
            "webRoot": "${workspaceFolder}"
        },
        {
            "type": "edge",
            "request": "launch",
            "name": "Debug INT.TEST (Edge)",
            "url": "http://localhost:3000",
            "preLaunchTask": "npm-run-start-internal.test",
            "webRoot": "${workspaceFolder}"
        },
        {
            "name": "Debug CLIENT.TEST (Chrome)",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:3000",
            "preLaunchTask": "npm-run-start-client.test",
            "webRoot": "${workspaceRoot}",
            "sourceMaps": true
        },
        {
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "name": "Debug CLIENT.TEST (Firefox)",
            "url": "http://localhost:3000",
            "preLaunchTask": "npm-run-start-client.test",
            "webRoot": "${workspaceFolder}"
        },
        {
            "type": "edge",
            "request": "launch",
            "name": "Debug CLIENT.TEST (Edge)",
            "url": "http://localhost:3000",
            "preLaunchTask": "npm-run-start-client.test",
            "webRoot": "${workspaceFolder}"
        },
        {
            "type": "node",
            "name": "vscode-jest-tests",
            "request": "launch",
            "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/react-scripts-ts",
            "args": [
                "test",
                "--env=jsdom",
                "--runInBand"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "protocol": "inspector",
            "internalConsoleOptions": "neverOpen"
        },
    ]
}